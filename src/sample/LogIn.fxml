<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<FlowPane alignment="CENTER" orientation="VERTICAL" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <TextField fx:id="login_server_ip" promptText="Server IP">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
         <FlowPane.margin>
            <Insets bottom="20.0" />
         </FlowPane.margin>
      </TextField>
      <TextField fx:id="login_username" promptText="Username">
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
         <FlowPane.margin>
            <Insets bottom="20.0" />
         </FlowPane.margin>
      </TextField>
      <PasswordField fx:id="login_password" promptText="Password">
         <FlowPane.margin>
            <Insets bottom="20.0" />
         </FlowPane.margin>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </PasswordField>
      <FlowPane prefHeight="40.0" prefWidth="300.0">
         <children>
            <Button mnemonicParsing="false" onAction="#loginOnClick" prefHeight="40.0" prefWidth="140.0" text="LogIn">
               <FlowPane.margin>
                  <Insets right="20.0" />
               </FlowPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#openSignUp" prefHeight="40.0" prefWidth="140.0" text="Sign Up" />
         </children>
      </FlowPane>
   </children>
</FlowPane>
